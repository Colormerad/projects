@model caseManagementSystem.Models.Data.CaseDetail
@{
    ViewBag.Title = "addCaseDetail";
}

<div>
    <h4>Add a case detail</h4>
</div>

<div>

    @using (Html.BeginForm("AddCaseDetail", "Detail", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.HiddenFor(m => m.CaseMasterId)
        @Html.ValidationSummary()
    <fieldset>
        <div class="form-group">
            <p>Date of detail</p>
            @Html.TextBoxFor(m => m.DetailDate, "{0:MM/dd/20yy}", new { @class = "date-picker", @onfocus = "this.select();", @autofocus = "autofocus" })
        </div>
        <div class="form-group">
            <p>First Name</p>
            @Html.TextBoxFor(m => m.FirstName, new { @class = "helper-format", style = "font-size: .9em, width: 20em "})
        </div>
        <div class="form-group">
            <p>Last Name</p>
            @Html.TextBoxFor(m => m.LastName, new { @class = "helper-format", style = "font-size: .9em, width: 20em " })
        </div>
        <div class="form-group">
            <p>Street 1</p>
            @Html.TextBoxFor(m => m.StreetA, new { @class = "helper-format", style = "font-size: .9em, width: 20em " })
        </div>
        <div class="form-group">
            <p>Street 2 (optional)</p>
            @Html.TextBoxFor(m => m.StreetB, new { @class = "helper-format", style = "font-size: .9em, width: 20em " })
        </div>
        <div class="form-group">
            <p>City</p>
            @Html.TextBoxFor(m => m.City, new { @class = "helper-format", style = "font-size: .9em, width: 20em " })
        </div>
        <div class="form-group">
            <p>State</p>
            @Html.TextBoxFor(m => m.State, new { @class = "helper-format", style = "font-size: .9em, width: 20em " })
        </div>
        <div class="form-group">
            <p>Postal Code</p>
            @Html.TextBoxFor(m => m.PostalCode, new { @class = "helper-format", style = "font-size: .9em, width: 20em " })
        </div>
        <div class="form-group">
            <p>Notes</p>
            @Html.TextAreaFor(m => m.Notes, new { @class = "text-area", style = "max-width:100%" })
        </div>

        <div class=" btn-group">
            <div class="SaveButton">
                <input id="SaveButton" name="SaveButton" type="submit" value="Save" class="btn btn-primary">
            </div>
            <div>
                <input type="button" class="btn btn-primary" value="Cancel" onclick="@("window.location.href='" + @Url.Action("ViewCaseDetails", "Detail", new {CaseId = Model.CaseMasterId}) + "'");" />
            </div>
        </div>
    </fieldset>
    }
</div>