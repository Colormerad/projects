@model caseManagementSystem.Models.Data.CaseCharge
@{
    ViewBag.Title = "DeleteCaseCharges";
}

<div>
    <h4>Delete charge details</h4>
</div>

<div>
    <p>Case Number: @Model.CaseDetail.CaseMaster.CaseNumber</p>
</div>

<div class="form-group">
    <p>Are you sure you want to delete these charges?</p>
    <div class="btn-group">
       
        @using (Html.BeginForm("DeleteCaseCharges", "Charge", "Delete"))
        {
            @Html.HiddenFor(x => x.Id)
            @Html.HiddenFor(x => x.CaseDetailId)
            <div class="SaveButton">
                <input id="DeleteButton" name="DeleteButton" type="submit" value="Delete" class="btn btn-primary">
            </div>
        }
        <input type="button" class="btn btn-primary" value="Cancel" onclick="@("window.location.href='" + @Url.Action("ViewChargeDetails", "Charge", new {CaseDetailId = Model.CaseDetailId}) + "'");" />
    </div>
</div>