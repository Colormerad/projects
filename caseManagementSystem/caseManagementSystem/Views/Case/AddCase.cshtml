@model caseManagementSystem.Models.Data.CaseMaster
@{
    ViewBag.Title = "addCase";
}
<div>
    <h4>Add a new case</h4>
</div>
<div>
    @using (Html.BeginForm("AddCase", "Case", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.ValidationSummary()
    <fieldset>
        <div class="form-group">
            <p>Case Number</p>
            @Html.TextBoxFor(m => m.CaseNumber, new { @class = "helper-format", style = "font-size: .9em, width: 20em ", @autofocus = "autofocus" })
        </div>
        <div class="form-group">
            <p>Case Name</p>
            @Html.TextBoxFor(m => m.CaseName, new { @class = "helper-format", style = "font-size: .9em, width: 20em " })
        </div>
        <div class="form-group">
            <p>Filing Date</p>
            @Html.TextBoxFor(m => m.FilingDate, "{0:MM/dd/20yy}", new { @class = "date-picker" })

        </div>
        <div class="form-group">
            <p>Agency</p>
            @Html.TextBoxFor(m => m.Agency, new { @class = "helper-format", style = "font-size: .9em, width: 20em " })
        </div>
        <div class="form-group">
            <p>Judge</p>
            @Html.TextBoxFor(m => m.Judge, new { @class = "helper-format", style = "font-size: .9em, width: 20em " })
        </div>
        <div class=" btn-group">
            <div class="SaveButton">
                <input id="SaveButton" name="SaveButton" type="submit" value="Save" class="btn btn-primary">
            </div>
            <div>
                <input type="button" class="btn btn-primary" value="Cancel" onclick="@("window.location.href='" + @Url.Action("Index", "Case") + "'");" />
            </div>
        </div>
    </fieldset>
    }
</div>

        


